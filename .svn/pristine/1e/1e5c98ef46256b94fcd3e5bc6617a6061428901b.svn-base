//定义了myVerify的一般验证方法
var verification=function(el){
    // 必填项
    var required = /[\S]+/;
    // 手机正则
    var phone = /^1\d{10}$/;
    // 获取页面当前input 自定义属性的值；
    var attrVal = $(el).attr("myVerify");
    // 获取页面当前input的值；
    var inputVal = $(el).val();
    // 验证必填项
    if (attrVal === "required") {
        if (inputVal == "" || inputVal == null) {
            layer.tips("此项为必填项", el, {
                tips: 3
            });
            //$(el).focus();
            return false;
        }else{
            return true;
        }
    }
    //验证手机号是否存在完成密码找回
    if (attrVal === "phone") {
        if (inputVal == "" || inputVal == null) {
            layer.tips('此项为必填项', el, {
                tips: 3
            });
            //$(el).focus();
            return false;
        } else if (!phone.test(inputVal)) {
            layer.tips("输入的手机号有误请重新输入", el, {
                tips: 3
            });
            //$(el).focus();
            return false;
        }else{
            return true;
        }
    }
    //验证验证码
    if (attrVal === "verificationCode") {
        if (inputVal == "" || inputVal == null) {
            layer.tips('此项为必填项', el, {
                tips: 3
            });
            //$(el).focus();
            return false;
        } else if (inputVal!=VerificationCode) {
            layer.tips("验证码错误", el, {
                tips: 3
            });
            //$(el).focus();
            return false;
        }else{
            return true;
        }
    }
};





